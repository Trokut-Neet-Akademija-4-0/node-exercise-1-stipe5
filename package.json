{
  "name": "node-express-template",
  "version": "1.0.0",
  "description": "Node.js + ExpressJS template",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "build": "tsc",
    "dev": "node --env-file=.env --import=tsx --watch ./src/index.ts",
    "zad1": "node --env-file=.env --import=tsx --watch ./zadaci/zad1.ts",
    "zad2": "node --env-file=.env --import=tsx --watch ./zadaci/zad2.ts",
    "zad4": "node --env-file=.env --import=tsx --watch ./zadaci/zad4.ts",
    "zad5": "node --env-file=.env --import=tsx --watch ./zadaci/zad5.ts",
    "zad6": "node --env-file=.env --import=tsx --watch ./zadaci/zad6.ts",
    "start": "node dist/index.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.3",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.1"
  }
}
